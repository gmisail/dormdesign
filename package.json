{
  "name": "dormdesign",
  "devDependencies": {
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "2.2.1",
    "redux-devtools-extension": "^2.13.9"
  },
  "scripts": {
    "prettier:frontend": "prettier ./frontend/src --write",
    "prettier:server": "prettier ./server/**/*.ts --write",
    "dev": "docker-compose --env-file ./.env -f docker-compose.dev.yml up --build",
    "clear-dev-data": "docker-compose -f docker-compose.dev.yml down && docker volume rm dd_database && rm -rf ./redis_data",
    "prepare": "husky install"
  },
  "lint-staged": {
    "server/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "npm run prettier:server"
    ],
    "frontend/src/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "npm run prettier:frontend"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
